<h1>New Message</h1>
<turbo-frame id="new_message" target="_top">
  <%= form_with(model: [@message.room, @message], 
  data:{ controller:"reset_form", action: "turbo:submit-end->reset_form"}) do |form| %>
    <div class="field">
      <%= form.text_field :content %>
      <%= form.submit "Send"%>
    </div>
  <% end %>
</turbo-frame>
<%= link_to 'Back', @message.room %>
